

{ chosen { zmk,display = &oled; }; };
&i2c0 { status = "okay"; sda-pin = <26>; scl-pin = <27>;
oled: ssd1306@3c {
compatible = "solomon,ssd1306fb";
reg = <0x3c>;
width = <128>;
height = <32>;
};
};
&led_strip { compatible = "zmk,ws2812"; chain-length = <36>; gpios = <&gpio0 15 GPIO_ACTIVE_HIGH>;
color-mapping = \<LED_COLOR_ID_GREEN LED_COLOR_ID_RED LED_COLOR_ID_BLUE>; };